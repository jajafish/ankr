<div class="page-header">
  <h1><strong> <%=@intention.name %></strong>    <small>in San Francisco</small></h1>
</div>



<% if signed_in? %>
<% unless current_user.intentions.include?(@intention)%>

	<%= button_to "I want to do it", want_to_path(@intention), :method=>:post, :class => "btn btn-primary btn-lg" %>

<% end %>


<% if current_user.intentions.include?(@intention)%>

	<%= link_to('I dont want to do this', intention_path(@intention.id) , :method => :delete, :class => "btn btn-primary btn-lg" ) %>

<% end %>
<% end %>

<% if !signed_in? %>

	<%= button_to "I want to do it", want_to_path(@intention), :method=>:post, :class => "btn btn-primary btn-lg" %>



<% end %>

<br>
<br>


<div class="row">
	<% @intention.users.each do |u| %>
	<div class="col-xs-12 col-sm-6 col-md-3">
		<div class="thumbnail">
			<a href="/users/<%=u[:id]%>">
				<h3><%=u.name%></h3>
			</a>
		</div>
	</div>
<% end %>



<% @intention_words.each do |word| %>
<%= word.name %>
<% end %>








<% @related_intentions.each do |int| %>


<div class="page-header">
  <h1>People who want to <%= int.name %>  </h1>
</div>








<% end %>













