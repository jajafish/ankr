<div class="container">


  <%= render 'intentions/new' %>





    <div class="row">
      <div class="col-md-12 col-sm-12">
        <%flash.each do|key,value|%>
                <div class="alert alert-<%=key%>"> <%=value%> </div>
        <%end%>
     
      </div>
    </div>







  
<div class="page-header">
  <h1>People in San Francisco want to...</h1>
</div>








    <div class="row">




      <% @intentions.reverse.each do |intention| %>

        <div class="col-xs-12 col-sm-6 col-md-3">
          <a href="/intentions/<%=intention[:id]%>">
          <div class="thumbnail">
            
            <h3><%=intention.name%></h3>
            


          </div>
          </a>

       

     
     </div>
      <% end %>
    </div>


    

</div>


 



