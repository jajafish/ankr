

<div class="row">
	<div class="col-md-6 col-sm-6 col-md-offset-3 col-sm-offset-3">
	<%= form_for @user do |f| %>
		<% unless @user.errors.count == 0 %>
			<div class="alert alert-error">
				The form contains <%= pluralize(@user.errors.count, "error") %>
			</div>
			<ul class="list-group">
				<% @user.errors.full_messages.each do |msg| %>
				<li class="list-group-item"><%= msg %></li>
				<% end %>
			</ul>
			<% end %>

			
			<%= f.text_field :name, class: "form-control input-lg", placeholder: "name" %>

			<br>

			
			<%= f.text_field :email, class: "form-control input-lg", placeholder: "email" %>

			<br>

			
			<%= f.password_field :password, class: "form-control input-lg", placeholder: "password" %>

			<br>

			
			<%= f.password_field :password_confirmation, class: "form-control input-lg", placeholder: "password" %>

			<br>

<br>
<br>
			<%= f.submit "That's me", class: "btn btn-primary btn-lg btn-block" %>
			<% end %>
		</div>
	</div>


